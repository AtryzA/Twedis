{
    "parser": "babel-eslint",
    "env": {
        "browser"  : true,
        "node"     : true,
        "commonjs" : true,
        "es6"      : true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:eslint-comments/recommended"
    ],
    "parserOptions": {
        "ecmaVersion" : 2018,
        "sourceType"  : "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "eslint-comments",
        "react"
    ],
    "settings": {
        "react": {
          "version": "detect"
        }
    },
    "rules": {
        "semi": ["error", "always"],
        "semi-spacing": ["error", {"after": true, "before": false}],
        "semi-style": ["error", "last"],
        "no-extra-semi": "error",
        "no-unexpected-multiline": "error",
        "no-unreachable": "error",
        "no-unused-vars": "off",
        "quotes": [2, "single"],
        "strict": [2, "never"],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 2,
        "no-console": 0
    }
}